<h3>以下の内容で、送信する。</h3>

<%= form_for(@apartment, url: apartments_path, local: true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :price %>
  <%= form.hidden_field :address %>
  <%= form.hidden_field :year %>
  <%= form.hidden_field :note %>


  <p>物件名:<%= @apartment.name %></p>
  <p>賃料:<%= @apartment.price %></p>
  <p>住所:<%= @apartment.address %></p>
  <p>築年数:<%= @apartment.year %></p>
  <p>備考:<%= @apartment.note %></p>

  <%= form.submit  "登録する" %>

  <%= form.submit "戻る", name: 'back' %>
<% end %>
